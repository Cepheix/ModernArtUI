<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/seekBar"
        android:id="@+id/palette"
        android:layout_alignParentTop="true">

        <View

            android:background="@color/Aquamarine"
            android:tag="@color/Aquamarine"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="160dip"
            android:layout_height="270dip"
            android:id="@+id/view1">
        </View>

        <View

            android:background="@color/Gray"
            android:tag="@color/Gray"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="160dip"
            android:layout_height="150dip"
            android:id="@+id/view2"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/view1">
        </View>

        <View
            android:background="@color/DarkMagenta"
            android:tag="@color/DarkMagenta"
            android:layout_width="50dip"
            android:layout_height="180dip"
            android:layout_toRightOf="@+id/view1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/view3">
        </View>

        <View
            android:background="@color/DarkOrange"
            android:tag="@color/DarkOrange"
            android:layout_width="50dip"
            android:layout_height="180dip"
            android:layout_below="@+id/view3"
            android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3"
            android:layout_toRightOf="@+id/view1"
            android:layout_toEndOf="@+id/view1"
            android:id="@+id/view4">
        </View>

        <View
            android:background="@color/White"
            android:tag="@color/White"
            android:layout_width="50dip"
            android:layout_height="180dip"
            android:layout_alignRight="@+id/view4"
            android:layout_alignEnd="@+id/view4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/view2"
            android:layout_toEndOf="@+id/view2"
            android:layout_below="@+id/view4"
            android:id="@+id/view5">
        </View>


    </RelativeLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
